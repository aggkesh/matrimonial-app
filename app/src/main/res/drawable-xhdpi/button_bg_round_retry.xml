<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="false">
        <shape android:shape="oval">
            <stroke android:width="@dimen/btn_border_width" android:color="@android:color/holo_orange_dark" />
            <solid android:color="@android:color/holo_orange_light" />
            <size android:width="@dimen/retry_circle_radius" android:height="@dimen/retry_circle_radius" />
        </shape>
    </item>
    <item
        android:state_pressed="true">
        <shape android:shape="oval">
            <stroke android:width="@dimen/btn_border_width" android:color="@android:color/holo_orange_light" />
            <solid android:color="@android:color/holo_orange_dark" />
            <size android:width="@dimen/retry_circle_radius" android:height="@dimen/retry_circle_radius" />
        </shape>
    </item>
</selector>